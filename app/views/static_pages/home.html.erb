<div class="container">	
	<div style="margin-top:80px; margin-bottom:31px">
		
		<div style="width:49%; float:left; text-align:center">	
			<img src="/assets/Logo v3 transparent.png" alt="Logo" >
		</div>
		<div style="width:49%; height:405px; float:right; font-size:0; text-align:center">
			<span style="height:100%; display:inline-block; vertical-align:middle"></span>
			<h1 style="display:inline-block; vertical-align:middle; font-family:Franklin Gothic Book, 'franklin_gothic_bookregular', sans-serif; font-size:88px; color:#ccc">Welcome.</h1>
		</div>

	</div>
</div>

<div style="width:100%; height:88px; line-height:88px; position:relative; background-color:#ccc; text-align:center">
	<%= link_to "Request a trial", '#', id: "request_trial_button", class: "btn btn-large btn-primary", style: "vertical-align:middle" %>
	<div id="request_trial_form_wrapper" style="position:absolute; left:0; right:0">
		<%= form_for(:free_trial, url: '/request_free_trial', :html => { id: "request_trial_form", :style => "margin:0px auto 0px auto; line-height:12px; width:23%; text-align:center" } ) do |f| %>
			<%= f.text_field :free_trial_field, id: "free_trial_field", placeholder: "Enter your email address." %>
			<%= f.submit "Submit email & request trial", id: "free_trial_button", class: "btn btn-medium btn-primary" %>
		<% end %>
	</div>
</div>

